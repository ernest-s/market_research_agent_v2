generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* =========================
   USER
========================= */

model User {
  id        String   @id @default(uuid())
  auth0Sub  String   @unique
  email     String   @unique

  firstName String?
  lastName  String?

  role      UserRole @default(MEMBER)

  /* Individual company association (profile-level) */
  companyId String?
  company   Company? @relation(fields: [companyId], references: [id])

  /* Corporate membership (explicit opt-in) */
  corporateAccountId String?
  corporateAccount   CorporateAccount? @relation(fields: [corporateAccountId], references: [id])

  studies   Study[]  @relation("UserStudies")
  sessions  Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/* =========================
   SESSION
========================= */

model Session {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime @default(now())
  lastSeenAt    DateTime @default(now())
  expiresAt     DateTime
  revokedAt     DateTime?

  revokedReason SessionRevokedReason?

  userAgent     String?
  ipAddress     String?

  @@index([userId])
  @@index([expiresAt])
}

/* =========================
   COMPANY (Neutral entity)
========================= */

model Company {
  id        String   @id @default(uuid())
  name      String   @unique
  domain    String?

  users     User[]
  studies   Study[] @relation("CompanyStudies")

  /* Optional corporate link */
  corporateAccount CorporateAccount?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/* =========================
   CORPORATE ACCOUNT
========================= */

model CorporateAccount {
  id            String   @id @default(uuid())
  name          String
  companyId     String   @unique
  company       Company  @relation(fields: [companyId], references: [id])

  billingEmail  String?
  status        CorporateStatus @default(ACTIVE)

  users         User[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

/* =========================
   STUDY
========================= */

model Study {
  id           String      @id @default(uuid())
  title        String
  status       StudyStatus @default(DRAFT)

  companyId    String
  company      Company @relation("CompanyStudies", fields: [companyId], references: [id])

  createdById  String
  createdBy    User   @relation("UserStudies", fields: [createdById], references: [id])

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

/* =========================
   ENUMS
========================= */

enum UserRole {
  ADMIN
  MEMBER
}

enum StudyStatus {
  DRAFT
  ACTIVE
  COMPLETED
}

enum SessionRevokedReason {
  LOGOUT
  OVERRIDDEN
  TIMEOUT
}

enum CorporateStatus {
  ACTIVE
  SUSPENDED
  TERMINATED
}
