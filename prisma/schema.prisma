generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String            @id @default(uuid())
  auth0Sub           String            @unique
  email              String            @unique
  firstName          String?
  lastName           String?
  role               UserRole          @default(MEMBER)
  /// Individual company association (profile-level)
  companyId          String?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  /// Corporate membership (explicit opt-in)
  corporateAccountId String?
  plan               UserPlan          @default(FREE)
  status             UserStatus        @default(ACTIVE)
  sessions           Session[]
  studies            Study[]           @relation("UserStudies")
  company            Company?          @relation(fields: [companyId], references: [id])
  corporateAccount   CorporateAccount? @relation(fields: [corporateAccountId], references: [id])
}

model Session {
  id            String                @id @default(uuid())
  userId        String
  createdAt     DateTime              @default(now())
  lastSeenAt    DateTime              @default(now())
  expiresAt     DateTime
  revokedAt     DateTime?
  revokedReason SessionRevokedReason?
  userAgent     String?
  ipAddress     String?
  user          User                  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Company {
  id               String            @id @default(uuid())
  name             String            @unique
  domain           String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  corporateAccount CorporateAccount?
  studies          Study[]           @relation("CompanyStudies")
  users            User[]
}

model CorporateAccount {
  id           String          @id @default(uuid())
  name         String
  companyId    String          @unique
  billingEmail String?
  status       CorporateStatus @default(ACTIVE)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  company      Company         @relation(fields: [companyId], references: [id])
  users        User[]
}

model Study {
  id          String      @id @default(uuid())
  title       String
  status      StudyStatus @default(DRAFT)
  companyId   String
  createdById String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  company     Company     @relation("CompanyStudies", fields: [companyId], references: [id])
  createdBy   User        @relation("UserStudies", fields: [createdById], references: [id])
}

enum UserRole {
  ADMIN
  MEMBER
}

enum StudyStatus {
  DRAFT
  ACTIVE
  COMPLETED
}

enum SessionRevokedReason {
  LOGOUT
  OVERRIDDEN
  TIMEOUT
}

enum CorporateStatus {
  ACTIVE
  SUSPENDED
  TERMINATED
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

enum UserPlan {
  FREE
  CORPORATE
}
